            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.full_approved_workshop" />
        <activity android:name=".activities.SuspendedWorkshop" />
        <activity android:name=".activities.WorkshopAwaitingApproval" />
        <activity android:name=".activities.DashBoard" />
        <activity android:name=".activities.ActivityControl">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_Approved_Schedules"></activity>
        <activity android:name=".activities.CompletedWorkshops"></activity>
    </application>

</manifest>