<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fadingEdge="horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/button_focused1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/loayout"
                android:weightSum="10"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"

                        android:hint="name"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/email"
                        android:hint="email"

                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/phone"
                        android:hint="phine"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/reg_no"
                        android:hint="reg_no"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"

                        android:hint="name"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/email1"
                        android:hint="email"

                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/phone1"
                        android:hint="phine"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/reg_no1"
                        android:hint="reg_no"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:text="Approve"
                    android:id="@+id/approved"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"

                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/decline"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/secondbutton"
                    android:drawableRight="@drawable/ic_close_black2_24dp"
                    android:textColor="@color/colorWhite"
                    android:text="Decline"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/delete"
                    android:background="@drawable/buttonround"
                    android:textColor="@color/colorWhite"
                    android:drawableRight="@drawable/ic_delete_forever_black_24dp"
                    android:text="delete"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>