<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:fadingEdge="horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_focused1"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sections"
                android:layout_width="208dp"

                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/approvedcreated_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"
                    android:text="Created_by"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/awardcode"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="AwaordCode"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/accountCode"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="AccountCode"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/DonorBaseLine"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="DBL:"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textSize="16sp">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="status"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:id="@+id/approvedworkshopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"
                    android:text="Workshop:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/approvedtimeanddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"
                    android:text="time:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/approvedlocation"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Location:"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>